<HBox prefHeight="550.0" prefWidth="1043.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #3BE477;" />
      <Pane fx:id="scenePane2" prefHeight="550.0" prefWidth="865.0">
