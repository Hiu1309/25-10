            <TextField fx:id="phonenumberField" layoutX="512.0" layoutY="301.0" onAction="#regBtn" prefHeight="26.0" prefWidth="265.0" promptText="Phone Number" style="-fx-background-radius: 5;" />
            <TextField fx:id="addressField" layoutX="512.0" layoutY="227.0" onAction="#regBtn" prefHeight="26.0" prefWidth="265.0" promptText="Address" style="-fx-background-radius: 5;" />
