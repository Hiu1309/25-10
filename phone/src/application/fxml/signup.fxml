               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            <Button fx:id="confirmButton" layoutX="657.0" layoutY="449.0" mnemonicParsing="false" onAction="#regBtn" prefHeight="30.0" prefWidth="120.0" styleClass="btn3" stylesheets="@../css/style.css" text="Confirm">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
